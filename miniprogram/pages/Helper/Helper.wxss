.container {
    display: flex;
    flex-direction: column;
    height: 100%;
    width: 100%;
}

.chat-container {
    flex: 1;
    background-color: #8ab6f0;
    overflow-y: scroll;
    padding-bottom: 10px;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 60px;
}

.chat-container::after {
    content: "";
    display: table;
    clear: both;
}

.chat-bubble {
    display: inline-block;
    margin: 10px;
    padding: 8px 12px;
    border-radius: 15px;
    clear: both;
    position: relative;
    word-wrap: break-word;
    box-sizing: border-box;
    max-width: 80%; /* 限制气泡最大宽度 */
}

.sender {
    float: right;
    background-color: #1c7eff;
    color: #ffffff;
}

.receiver {
    float: left;
    background-color: #f1f1f1;
    color: #333333;
}

.input-container {
    display: flex;
    align-items: center;
    padding: 0 10px;
    background-color: #ffffff;
    border-top: 1px solid #e0e0e0;
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 60px;
}

.input {
    flex: 2;
    height: 40px;
    padding: 0 10px;
    border: 1px solid #e0e0e0;
    border-radius: 20px;
    background-color: #f5f5f5;
    font-size: 14px;
}

.send-btn {
    display: flex;
    justify-content: center;
    align-items: center;
    flex: 0.2;
    margin-left: 10px;
    margin-right: 20px;
    background-color: #8ab6f0;
    color: #ffffff;
    padding: 10px;
    border-radius: 20px;
    font-size: 14px;
    height: 40px;
    line-height: 20px;
}

.receiver towxml {
    font-size: 14px;
    line-height: 1.3;
}

.receiver towxml .h2w__p {
    margin-top: 0.3em;
    margin-bottom: 0.3em;
}

@keyframes blink {
    0% { opacity: 0.2; }
    20% { opacity: 1; }
    100% { opacity: 0.2; }
}

.waiting-dots {
    animation: blink 1.4s infinite both;
}

/* 新增样式 */
.chat-bubble.receiver .waiting-dots {
    font-size: 20px;
    letter-spacing: 3px;
}

.chat-bubble.receiver image {
    max-width: 100%;
    height: auto;
}